//1
#include <stdio.h>
int main()
{
	int n;
	printf("enter number of units");
	scanf("%d",&n);
	for(int i=1;i<=(n+1)/2;i++){
		for(int j=n/2;j>=i;j--){
		printf(" ");
		}
		for(int k=1;k<=i*2-1;k++){
		 
		printf("%d",k);
		
		}
		printf("\n");
		}
}
